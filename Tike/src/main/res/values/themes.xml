<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Tike" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/blue</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="eventTitleColor">@color/light_blue_black</item>
        <item name="eventDividerColor">@color/lighter_gray</item>
        <item name="eventBackgroundColor">@color/blue_white</item>
        <item name="mainBackgroundColor">@color/background_main_light</item>
        <item name="secondaryBackgroundColor">@color/background_secondary_light</item>
        <item name="bottomNavigationIconsColor">@color/lighter_gray</item>
        <item name="android:windowBackground">?attr/mainBackgroundColor</item>
        <item name="android:statusBarColor">?attr/mainBackgroundColor</item>
        <item name="android:navigationBarColor">?attr/mainBackgroundColor</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
    </style>

    <style name="Theme.Tike.Splash" parent="Theme.Tike">
        <item name="android:windowBackground">@drawable/layout_splash_light</item>
    </style>

    <style name="Theme.Tike.BlueButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@drawable/selector_button_blue_bg</item>
        <item name="iconTint">@color/selector_button_blue_text</item>
        <item name="android:textSize">16sp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/blue</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="Theme.Tike.Date.WeekDay" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="Theme.Tike.Date.Day" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/selector_date_text_day</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Theme.Tike.Date.Today" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/selector_date_text_today</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Theme.Tike.TextView.RobotoMedium" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="Theme.Tike.TextView.RobotoRegular" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="Theme.Tike.TextView.RobotoLight" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/roboto_light</item>
    </style>

    <style name="Theme.Tike.TextView.RobotoThin" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/roboto_thin</item>
    </style>

</resources>