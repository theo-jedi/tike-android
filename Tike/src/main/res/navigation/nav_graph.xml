<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/routingFragment">

    <fragment
        android:id="@+id/routingFragment"
        android:name="com.theost.tike.ui.fragments.RoutingFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_routing">
        <action
            android:id="@+id/action_routingFragment_to_scheduleFragment"
            app:destination="@id/scheduleFragment"
            app:enterAnim="@anim/fade_in"
            app:popEnterAnim="@anim/fade_in"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_routingFragment_to_authFragment"
            app:destination="@id/authFragment"
            app:enterAnim="@anim/fade_in"
            app:popEnterAnim="@anim/fade_in"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/authFragment"
        android:name="com.theost.tike.ui.fragments.AuthFragment"
        android:label="@string/auth"
        tools:layout="@layout/fragment_auth">
        <action
            android:id="@+id/action_authFragment_to_registrationFragment"
            app:destination="@id/registrationFragment"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/fade_out" />
        <action
            android:id="@+id/action_authFragment_to_scheduleFragment"
            app:destination="@id/scheduleFragment"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/fade_out"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/registrationFragment"
        android:name="com.theost.tike.ui.fragments.RegistrationFragment"
        android:label="@string/registration_title"
        tools:layout="@layout/fragment_registration">
        <action
            android:id="@+id/action_registrationFragment_to_scheduleFragment"
            app:destination="@id/scheduleFragment"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/fade_out"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/scheduleFragment"
        android:name="com.theost.tike.ui.fragments.ScheduleFragment"
        android:label="@string/schedule"
        tools:layout="@layout/fragment_schedule" />

    <fragment
        android:id="@+id/inboxFragment"
        android:name="com.theost.tike.ui.fragments.InboxFragment"
        android:label="@string/inbox"
        tools:layout="@layout/fragment_inbox" />

    <fragment
        android:id="@+id/addingFragment"
        android:name="com.theost.tike.ui.fragments.AddingFragment"
        android:label="@string/creation"
        tools:layout="@layout/fragment_adding">
        <action
            android:id="@+id/action_addingFragment_to_participantsFragment"
            app:destination="@id/participantsFragment"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/fade_out" />
    </fragment>

    <fragment
        android:id="@+id/participantsFragment"
        android:name="com.theost.tike.ui.fragments.ParticipantsFragment"
        android:label="@string/participants"
        tools:layout="@layout/fragment_participants">
        <argument
            android:name="requestKey"
            app:argType="string" />
        <argument
            android:name="addedIds"
            app:argType="string[]" />
    </fragment>

    <fragment
        android:id="@+id/dialogsFragment"
        android:name="com.theost.tike.ui.fragments.DialogsFragment"
        android:label="@string/dialogs"
        tools:layout="@layout/fragment_dialogs" />

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.theost.tike.ui.fragments.ProfileFragment"
        android:label="@string/profile"
        tools:layout="@layout/fragment_profile" />

</navigation>